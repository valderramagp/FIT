@model IEnumerable<FIT.Models.Corredor>

@{
    ViewBag.Title = "Index";
}

<link type="text/css" rel="stylesheet" href="~/Content/datatables.min.css" />

<h2>¡BIENVENIDO!</h2>
 
@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary pull-right" })

<br />

<table class="table table-striped table-hover table-responsive" id="tblCorredores">
    <thead>
        <tr>
            <th>
                Folio
            </th>
            <th>
                Nombre
            </th>
            <th>
                Edad
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Celular
            </th>
            <th>
                Correo
            </th>
            <th>
                Sexo
            </th>
            <th>
                Talla
            </th>
            <th>
                Carrera
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Folio
            </td>
            <td>
                @item.Nombres @item.Paterno @item.Materno
            </td>
            <td>
                @item.Edad
            </td>
            <td>
                @item.Telefono
            </td>
            <td>
                @item.Celular
            </td>
            <td>
                @item.Correo
            </td>
            <td>
                @item.Sexo
            </td>
            <td>
                @item.Talla
            </td>
            <td>
                @item.Carrera.Descripcion
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Folio }) |
                
                <a class="btnEliminar" data-folio="@item.Folio">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<script src="~/scripts/datatables.js"></script>
<script>
    $(document).ready(function () {
        $(".btnEliminar").click(function () {
            var $id = $(this).data("folio");
            if (confirm("¿Estás seguro de querer eliminar este corredor?")) {
                window.location.href = "/Home/Delete/" + $id;
            }
        });

        $("#tblCorredores").DataTable({
            "language": {
                "url": "../scripts/DataTables-Spanish.json"
            },
        });
    })
</script>
